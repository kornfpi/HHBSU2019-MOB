<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitatBuddy.Views.RegistrationPage"
             Title ="Register Your App">
    <ContentPage.Content>
        <StackLayout>


            <Label x:Name="Lbl_NoInternet" HorizontalTextAlignment="Center" FontAttributes ="Bold" TextColor="white" BackgroundColor="Red" />

            <Label x:Name="Lbl_HomeCode" Text="Home Code"  IsVisible="False"/>
            <Entry x:Name="Entry_HomeCode" Placeholder="home Code"  IsVisible="False"/>

            <Label x:Name="Lbl_Username" Text="Username" IsVisible="False"/>
            <Entry x:Name="Entry_Username" Placeholder="Username"  IsVisible="False"/>

            <Button x:Name="Btn_Register" Text="Register App" Clicked="saveRegInfo"  IsVisible="False"/>

            <Button x:Name="Btn_Show" Text="Show Registration Info" Clicked="dispRegInfo"  IsVisible="True"/>
            <Button x:Name="Btn_Clear" Text="Clear Registration Info" Clicked="clearRegInfo"  IsVisible="True"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>