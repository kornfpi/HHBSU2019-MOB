<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitatBuddy.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>


            <Label x:Name="Lbl_NoInternet" HorizontalTextAlignment="Center" TextColor="{StaticResource HabitatBlue}" BackgroundColor="{StaticResource HabitatGreen}" />
            
            <Label x:Name="Lbl_Username" Text="Username" IsVisible="False"/>
            <Entry x:Name="Entry_Username" Placeholder="Username"  IsVisible="False"/>
            <Label x:Name="Lbl_Password" Text="Password"  IsVisible="False"/>
            <Entry x:Name="Entry_Password" Placeholder="Password"  IsVisible="False"/>
            <Button x:Name="Btn_SignIn" Text="Sign In" Clicked="SignInProcedure"  IsVisible="False"/>


            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>